<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <com.b21dccn216.vaxrobot.View.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f0f0f0"/>


    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">
        <View
            android:id="@+id/setting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_settings_24"
            android:layout_margin="8dp"
            />
        <View
            android:id="@+id/delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/baseline_delete_24"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_do_not_disturb_24"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/select"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_info_24"
            android:layout_margin="8dp" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/leftRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messages"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:includeFontPadding="false"
            android:text="Message: "
            android:textSize="10sp"/>

        <LinearLayout
            android:id="@+id/seekbarGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delta of Left and Right"
                />

            <LinearLayout
                android:id="@+id/deltaGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/seekbarDeltaValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="-14"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/seekbarDelta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:max="100"
                    android:paddingVertical="8dp"
                    android:progress="36" />
            </LinearLayout>


            <TextView
                android:id="@+id/titleSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Speed" />

            <LinearLayout
                android:id="@+id/speedGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seekbarValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="120"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:max="255"
                    android:paddingVertical="8dp"
                    android:progress="120" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@color/beigeColor"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/baseline_keyboard_double_arrow_left_24"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                app:tint="@color/whiteColor"
                android:text="left"
                android:id="@+id/left"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="2dp"
                android:layout_height="match_parent"
                app:dividerColor="@color/whiteColor"
                />
            <ImageView
                android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                app:tint="@color/whiteColor"
                android:text="right"
                android:id="@+id/right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/beigeColor"
        >
        <ImageView
            android:src="@drawable/baseline_keyboard_double_arrow_up_24"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:tint="@color/whiteColor"
            android:text="right"
            android:id="@+id/up"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:dividerColor="@color/whiteColor"
            />
        <ImageView
            android:src="@drawable/baseline_keyboard_double_arrow_down_24"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:tint="@color/whiteColor"
            android:text="right"
            android:id="@+id/down"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>